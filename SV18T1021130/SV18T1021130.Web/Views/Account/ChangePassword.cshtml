
@{
    ViewBag.Title = "Thay đổi mật khẩu";
}

<style>
    .eye {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 0px;
        padding: 10px
    }
    .eye:hover {
        cursor: pointer
    }

</style>

<div class="container">
    <div style="display: flex; justify-content: center; align-items: center; margin-top: 120px;">
        <form class="col-lg-6" style="background: #fff; padding: 15px; box-shadow: 0px 0px 7px 0px rgba(0,0,0,0.3)" action="~/account/changepassword" method="post">
            <div class="form-group has-feedback">
                <input name="oldPassword" type="password" class="form-control" placeholder="Mật khẩu cũ" autofocus>
                <span style="display: none" class="glyphicon glyphicon-eye-open eye eye_open" onclick="hidePassword(this)"></span>
                <span class="glyphicon glyphicon-eye-close eye eye_close" onclick="showPassword(this)"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="newPassword" type="password" class="form-control" placeholder="Mật khẩu mới" autofocus>
                <span style="display: none" class="glyphicon glyphicon-eye-open eye eye_open" onclick="hidePassword(this)"></span>
                <span class="glyphicon glyphicon-eye-close eye eye_close" onclick="showPassword(this)"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="comfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" autofocus>
                <span style="display: none" class="glyphicon glyphicon-eye-open eye eye_open" onclick="hidePassword(this)"></span>
                <span class="glyphicon glyphicon-eye-close eye eye_close" onclick="showPassword(this)"></span>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="form-group has-feedback text-danger">
                    @Html.ValidationSummary()
                </div>
            }
            <div class="text-right">
                <button type="submit" class="btn btn-info margin">Đổi mật khẩu</button>
                <button type="button" class="btn btn-default" onclick="window.location.href='/'">Hủy bỏ</button>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script>
        function showPassword(eye) {
            var parent = eye.parentElement;
            var eye_open = parent.querySelector('.eye_open');
            var eye_close = parent.querySelector('.eye_close');
            eye_close.style.display = 'none';
            eye_open.style.display = 'block';
            var input = parent.querySelector('input');
            input.setAttribute('type', 'text')
        }

        function hidePassword(eye) {
            var parent = eye.parentElement;
            var eye_open = parent.querySelector('.eye_open');
            var eye_close = parent.querySelector('.eye_close');
            eye_open.style.display = 'none';
            eye_close.style.display = 'block';
            var input = parent.querySelector('input');
            input.setAttribute('type', 'password')
        }
    </script>
}

