@model SV18T1021130.DomainModel.Category
@{
    ViewBag.Title = "Delete";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/category/delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021130.BusinessLayer.CommonDataService.InUsedCategory(Model.CategoryID))
                    {
                        <p class="text-danger">
                            Không được xóa khách hàng này
                        </p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i> &nbsp; Đồng ý xóa
                        </button>
                    }
                    <a href="~/category" class="btn btn-warning">
                        <i class="fa fa-ban"></i> &nbsp; Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>
</div>

