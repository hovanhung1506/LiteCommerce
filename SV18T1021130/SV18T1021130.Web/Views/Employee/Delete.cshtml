@model SV18T1021130.DomainModel.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}



<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">
            <div class="col-sm-2 text-center">
                <img src="@Html.Raw(string.IsNullOrEmpty(Model.Photo) ? "/Images/Employees/No-Image.png" : Model.Photo)" alt="Photo" style="width: 140px; height: 180px; object-fit: cover; margin-bottom: 20px" />
                <p>Ảnh đại diện</p>
            </div>
            <div class="col-sm-10">
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Họ:</label>
                    <span class="form-control-static col-xs-10">@Model.LastName</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Tên:</label>
                    <span class="form-control-static col-xs-10">@Model.FirstName</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Ngày sinh:</label>
                    <span class="form-control-static col-xs-10">@Model.BirthDate</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Email:</label>
                    <span class="form-control-static col-xs-10">@Model.Email></span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Ghi chú:</label>
                    <span class="form-control-static col-xs-10">@Model.Notes</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021130.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <p class="text-danger">
                            Không được xóa khách hàng này
                        </p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i> &nbsp; Đồng ý xóa
                        </button>
                    }
                    <a href="~/employee" class="btn btn-warning">
                        <i class="fa fa-ban"></i> &nbsp; Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>
</div>
