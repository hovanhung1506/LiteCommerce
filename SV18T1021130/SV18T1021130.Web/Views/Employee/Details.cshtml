@model SV18T1021130.DomainModel.Employee
@{
    ViewBag.Title = "Thông tin chi tiết nhân viên";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="#">
            <div class="col-sm-2 text-center">
                <img src="@Model.Photo" alt="Photo" style="width: 140px; height: 180px; object-fit: cover; margin-bottom: 20px" />
                <p>Ảnh đại diện</p>
            </div>
            <div class="col-sm-10">
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Họ:</label>
                    <span class="form-control-static col-xs-10">@Model.FirstName</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Tên:</label>
                    <span class="form-control-static col-xs-10">@Model.LastName</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Ngày sinh:</label>
                    <span class="form-control-static col-xs-10">@Model.BirthDate</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Email:</label>
                    <span class="form-control-static col-xs-10">@Model.Email</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 text-right">Ghi chú:</label>
                    <span class="form-control-static col-xs-10">@Model.Notes</span>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10 text-right">
                        <a href="~/employee" class="btn btn-warning">
                            <i class="fa fa-arrow-circle-o-left"></i> &nbsp; Quay lại
                        </a>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
    <div class="box-footer text-center">

    </div>
</div>



