
@{
    ViewBag.Title = "Thông tin chi tiết về đơn hàng";
}

<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
        </div>
        <div class="box-body">
            <form action="#" method="get">
                <div class="input-group">
                    <input type="text" name="searchValue" class="form-control" placeholder="Nhập mã chi tiết hóa đơn cần tìm">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="#" class="btn btn-flat btn-primary" style="margin-left: 5px">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </span>
                </div>
            </form>
            <div class="row" style="margin: 10px 0 10px 0">
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Mã hóa đơn</th>
                            <th>Mã mặt hàng</th>
                            <th>Số lượng</th>
                            <th>Giá bán</th>
                            <th style="width:75px">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 10; i++)
                        {
                            <tr>
                                <td>10248</td>
                                <td>11</td>
                                <td>12</td>
                                <td>21.00</td>
                                <td class="text-right">
                                    <a href="#" class="btn btn-xs btn-flat btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="#" class="btn btn-xs btn-flat btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
        <!-- /.box-footer-->
    </div>
</div>
