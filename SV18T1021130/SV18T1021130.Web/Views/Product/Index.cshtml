@model SV18T1021130.Web.Models.ProductSearchInput
@{
    ViewBag.Title = "Mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>
    <div class="box-body">
        <form action="~/product/search" id="searchInput">
            @Html.HiddenFor(m => m.PageSize)
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" name="categoryID">
                        <option value="0">-- Loại hàng --</option>
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.CategoryID" @Html.Raw(Model.CategoryID == item.CategoryID ? "selected" : "")>@item.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-3" style="margin-left: -15px">
                    <select class="form-control" name="supplierID">
                        <option value="0">-- Nhà cung cấp --</option>
                        @foreach (var item in Model.Suppliers)
                        {
                            <option value="@item.SupplierID" @Html.Raw(Model.SupplierID == item.SupplierID ? "selected" : "")>@item.SupplierName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input type="text" name="searchValue"
                           class="form-control"
                           value="@Model.SearchValue"
                           placeholder="Nhập tên mặt hàng cần tìm">
                    <span class="input-group-btn">
                        <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/product/create"
                           class="btn btn-flat btn-primary"
                           style="margin-left:5px;">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </span>
                </div>
            </div>
        </form>
        <div id="searchResult"></div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                var search = $("input[name='searchValue']").val()
                if (search !== "") {
                    $("input[name='searchValue']").val(search.trim())
                }
                doSearch(1);
                return false;
            })
        });

    </script>
}