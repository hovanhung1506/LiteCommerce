@model SV18T1021130.DomainModel.Shipper
@{

}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/save" method="post">
            @Html.HiddenFor(m => m.ShipperID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> &nbsp; Lưu dữ liệu
                    </button>
                    <a href="~/shipper" class="btn btn-warning">
                        <i class="fa fa-ban"></i> &nbsp; Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>
</div>



